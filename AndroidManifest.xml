<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mobi.mfti.prototype"
    android:versionCode="1"
    android:versionName="1.0" >
    
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
	
    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="mobi.mfti.prototype.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:label="Meter Tutorial"
            android:name=".MeterTutorialActivity">            
            <intent-filter>
                <action android:name="mobi.mfti.prototype.MeterTutorialActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>            
        </activity>
        
        <activity
            android:label="Example Reading"
            android:name=".MeterExampleActivity">            
            <intent-filter>
                <action android:name="mobi.mfti.prototype.MeterExampleActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>            
        </activity>
        
        <activity
            android:label="Read Usage"
            android:name=".ReadUsageActivity">            
            <intent-filter>
                <action android:name="mobi.mfti.prototype.ReadUsageActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>            
        </activity>
        
        <activity
            android:label="Listener"
            android:name=".ListenerActivity">            
            <intent-filter>
                <action android:name="mobi.mfti.prototype.ListenerActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>            
        </activity>
        
        <activity android:name="org.achartengine.GraphicalActivity" />
        
    </application>

</manifest>
